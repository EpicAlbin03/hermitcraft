{
  "name": "@hc/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "docker compose -f docker/docker-compose.yml up -d && dotenv -- turbo run dev",
    "dev:no-db": "dotenv -- turbo run dev",
    "db:up": "docker compose -f docker/docker-compose.yml up -d",
    "db:down": "docker compose -f docker/docker-compose.yml down",
    "db:destroy": "docker compose -f docker/docker-compose.yml down -v",
    "db:setup": "docker compose -f docker/docker-compose.yml up -d && bun run scripts/wait-for-db.ts && bun run --filter @hc/db db:push",
    "db:connect": "docker compose exec mysql mysql -uroot -proot hc",
    "db:push": "dotenv -- bun run --cwd packages/db db:push",
    "db:seed": "dotenv -- bun run --cwd packages/channel-sync db:seed",
    "db:wipe": "dotenv -- bun run --cwd packages/channel-sync db:wipe",
    "db:backfill": "dotenv -- bun run --cwd packages/channel-sync db:backfill",
    "check": "turbo run check",
    "lint": "turbo run lint",
    "clean": "find . -type d \\( -name \"node_modules\" -o -name \"dist\" -o -name \"build\" -o -name \".turbo\" -o -name \".svelte-kit\" \\) -prune -exec rm -rf {} + 2>/dev/null || true",
    "format": "prettier --write \"**/*.{ts,js,svelte,json,md}\"",
    "check-types": "turbo run check-types",
    "docker:web": "docker build -f docker/Dockerfile.web -t hc-sv-web .",
    "docker:worker": "docker build -f docker/Dockerfile.worker -t hc-bun-worker .",
    "prepare": "effect-language-service patch"
  },
  "devDependencies": {
    "@effect/language-service": "^0.56.0",
    "@types/bun": "^1.3.3",
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20251123.1"
  }
}
